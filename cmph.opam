opam-version: "1.2"
name: "cmph"
version: "0.1.1"
maintainer: "Jack Feser <feser@csail.mit.edu>"
authors: "Jack Feser <feser@csail.mit.edu>"
homepage: "https://github.com/jfeser/ocaml-cmph"
bug-reports: "https://github.com/jfeser/ocaml-cmph/issues"
doc: "https://jfeser.github.io/ocaml-cmph/"
license: "MIT"
dev-repo: "https://github.com/jfeser/ocaml-cmph.git"
build: [
  ["dune" "build" "-p" name "-j" jobs]
]
depends: [
  "dune"           {build & >= "1.1"}
  "ounit"          {test & >= "2.0" & < "2.1"}
  "ctypes"         {>= "0.14" & < "0.15"}
  "ctypes-foreign" {>= "0.4" & < "0.5"}
  "base"           {>= "v0.11" & < "v0.12"}
  "stdio"          {>= "v0.11" & < "v0.12"}
  "ppx_sexp_conv"  {>= "v0.11" & < "v0.12"}
]

synopsis: "OCaml wrapper for the C Minimal Perfect Hashing library"
description: """
`ocaml-cmph` is a wrapper library for the [C Minimal Perfect
Hashing](http://cmph.sourceforge.net/) library. CMPH contains algorithms for
generating perfect hashes. `ocaml-cmph` exposes a high level interface to these
hash generators.
"""
